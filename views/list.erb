<section id="todos" class>
  <header>
    <h2><%= @list.name %></h2>
    <ul>
      <li>
        <form action="/lists/<%=@list_id%>/complete_all" method="post">
          <button class="check" type="submit">Complete All</button>
        </form>
      </li>
      <li>
        <a class="edit" href="/lists/<%=@list_id%>/edit">Edit List</a>
      </li>
    </ul>
  </header>
  <ul>
    <% @list.each_with_index do |todo, todo_id| %>
      <%next if todo.done?%>
      <li>
        <form action="/lists/<%=@list_id%>/todos/<%=todo_id%>" method="post" class="check">
          <input type="hidden" name="completed" value="<%=(!todo.done?).to_s%>">
          <button type="submit">Complete</button>
        </form>
        <h3><%= todo %></h3>
        <form action="/lists/<%=@list_id%>/todos/<%=todo_id%>/destroy" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
    <% @list.each_with_index do |todo, todo_id| %>
      <% next unless todo.done? %>
      <li class="complete">
        <form action="/lists/<%=@list_id%>/todos/<%=todo_id%>" method="post" class="check">
          <input type="hidden" name="completed" value="<%=(!todo.done?).to_s%>">
          <button type="submit">Complete</button>
        </form>
        <h3><%= todo %></h3>
        <form action="/lists/<%=@list_id%>/todos/<%=todo_id%>/destroy" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
  </ul>
</section>
<form action="/lists/<%=@list_id%>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" placeholder="Example Task" type="text" value>
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>
<% content_for :header_links do %>
  <a class="list" href="/lists">
    All Lists
  </a>
<% end%>
