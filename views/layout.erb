<!doctype html>
<html lang="en-US">
  <head>
    <title>Todo App</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
    <script src="/javascripts/jquery-3.7.1.js"></script>
    <script src="/javascripts/application.js"></script>
  </head>
  <body>
    <header>
      <h1>Todo Tracker</h1>
      <div class="actions">
        <%== yield_content :header_links %>
      </div>
    </header>
    <%# need to create a session[:messages] array and iterate through all flash msgs %>
    <% session[:messages].each do |message| %>
      <div class="flash <%=message.type%>">
        <p><%= message.text %></p>
      </div>
    <% end %>
    <%session[:messages].clear%>
    <main id="mainyield">
      <%== yield %>
    </main>
  </body>
</html>
